{
  "name": "@enterprise-cmcs/mdct-core",
  "license": "CC0-1.0",
  "version": "0.0.0",
  "type": "module",
  "description": "Core functionality used across CMS MDCT applications",
  "keywords": [
    "cms",
    "cmcs",
    "mdct"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "directory": "https://github.com/Enterprise-CMCS/macpro-mdct-core.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "test": "jest --setupFiles dotenv/config",
    "build": "./node_modules/typescript/bin/tsc",
    "clean": "rm -rf dist"
  },
  "exports": {
    "./assets": {
      "types": "./dist/assets/index.d.ts",
      "default": "./dist/assets/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "default": "./dist/validation/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "assets": [
        "dist/assets/index.d.ts"
      ],
      "components": [
        "dist/components/index.d.ts"
      ],
      "types": [
        "dist/types/index.d.ts"
      ],
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "validation": [
        "dist/validation/index.d.ts"
      ]
    }
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "globals": {
      "isolatedModules": true
    },
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "./"
        }
      ],
      "text",
      "text-summary"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/testing/setupJest.tsx"
    ],
    "testEnvironment": "jest-environment-jsdom"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.0",
    "@testing-library/jest-dom": "^5.11.4",
    "aws-amplify": "^4.3.46",
    "dompurify": "^3.0.9",
    "html-react-parser": "^3.0.1",
    "jsdom": "^22.1.0",
    "prettier": "^3.2.5",
    "react-bootstrap": "^2.10.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.4.2",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.50.1",
    "react-icons": "^4.12.0",
    "react-router-dom": "6.22.2",
    "react-scripts": "^5.0.0",
    "react-uuid": "^1.0.3",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.38.0",
    "@babel/core": "^7.13.16",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.16.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/dompurify": "^3.0.2",
    "@types/jest": "^27.4.7",
    "@types/jest-axe": "^3.5.3",
    "@types/jsdom": "^21.1.1",
    "@types/moment": "^2.13.0",
    "@types/node": "^18.11.18",
    "@types/react": "^17.0.33",
    "@types/react-bootstrap": "^0.32.28",
    "@types/react-dom": "^17.0.10",
    "@types/react-helmet": "^6.1.6",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "babel": "^6.23.0",
    "babel-jest": "^26.6.3",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.x",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jsx-a11y": "^6.x",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^27.4.7",
    "jest-axe": "^6.0.0",
    "moment": "^2.29.4",
    "prettier": "^3.2.5",
    "react-router-dom": "6.22.2",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^4.6.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
